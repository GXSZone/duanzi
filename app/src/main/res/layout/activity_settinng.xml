<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".module.setting.SettingActivity">

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="设置"
            android:textColor="#ff3f4557"
            android:textSize="18dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:src="@mipmap/back" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/title_bar"
        android:background="@color/view_line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_bar"
        android:layout_marginTop="1px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_click_psw_setting"
                style="@style/mine_item_text"
                android:drawableLeft="@mipmap/setup_passwprd"
                android:text="设置密码" />

            <include layout="@layout/view_line" />

            <TextView
                android:id="@+id/tv_click_notice_setting"
                style="@style/mine_item_text"
                android:drawableLeft="@mipmap/setting_notice"
                android:text="消息设置" />

            <include layout="@layout/view_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:paddingLeft="20dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/setup_autoplay"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:text="Wi-Fi自动播放"
                    android:textColor="@color/color_171F24" />

                <Switch
                    android:id="@+id/wifi_auto_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <include layout="@layout/view_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:paddingLeft="20dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/setup_mobile"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:text="移动流量自动播放"
                    android:textColor="@color/color_171F24" />


                <Switch
                    android:id="@+id/liuliang_auto_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <include layout="@layout/view_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:paddingLeft="20dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/setup_huyan"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:text="护眼模式"
                    android:textColor="@color/color_171F24" />

                <Switch
                    android:id="@+id/eye_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <include layout="@layout/view_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:paddingLeft="20dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/setup_replay"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:text="视频自动重播"
                    android:textColor="@color/color_171F24" />

                <Switch
                    android:id="@+id/video_auto_replay_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_text_size"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:paddingLeft="20dp"
                android:paddingRight="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/setup_textsize"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:text="正文字号"
                    android:textColor="@color/color_171F24" />

                <TextView
                    android:id="@+id/tv_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableRight="@mipmap/my_more"
                    android:drawablePadding="10dp"
                    android:text="中号" />
            </RelativeLayout>

            <include layout="@layout/view_line" />

            <RelativeLayout
                android:id="@+id/rl_clear_cache"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:paddingLeft="20dp"
                android:paddingRight="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/setup_clean"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:text="清理缓存"
                    android:textColor="@color/color_171F24" />

                <TextView
                    android:id="@+id/tv_cache"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableRight="@mipmap/my_more"
                    android:drawablePadding="10dp"
                    android:text="0M" />
            </RelativeLayout>

            <include layout="@layout/view_line" />

            <RelativeLayout
                android:id="@+id/rl_check_update"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:paddingLeft="20dp"
                android:paddingRight="25dp">

                <TextView
                    android:id="@+id/tv_check_version"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/setup_chackupdate"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:text="检查更新"
                    android:textColor="@color/color_171F24" />

                <TextView
                    android:id="@+id/tv_version_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableRight="@mipmap/my_more"
                    android:drawablePadding="10dp"
                    android:text="1.5.1" />


                <com.ruffian.library.widget.RView
                    android:id="@+id/view_red"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="25dp"
                    android:layout_toRightOf="@id/tv_check_version"
                    app:background_normal="@color/color_DB2D43"
                    app:corner_radius="5dp" />
            </RelativeLayout>

            <include layout="@layout/view_line" />

            <TextView
                android:id="@+id/tv_click_user_agreement"
                style="@style/mine_item_text"
                android:drawableLeft="@mipmap/my_wdtiezi"
                android:text="用户隐私协议" />

            <include layout="@layout/view_line" />

            <RelativeLayout
                android:id="@+id/rl_click_teenager_mode"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:paddingLeft="20dp"
                android:paddingRight="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/setup_teenagermode_icon"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:text="青少年模式"
                    android:textColor="@color/color_171F24" />

                <TextView
                    android:id="@+id/tv_teenager_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableRight="@mipmap/my_more"
                    android:drawablePadding="10dp"
                    android:text="未开启" />
            </RelativeLayout>

            <include layout="@layout/view_line" />

            <TextView
                android:id="@+id/tv_click_community_convention"
                style="@style/mine_item_text"
                android:drawableLeft="@mipmap/setup_shequgongyue"
                android:text="社区公约" />

            <include layout="@layout/view_line" />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/tv_click_login_out"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="40dp"
                android:gravity="center"
                android:text="退出登录"
                android:textColor="@color/color_FF698F"
                android:textSize="16dp"
                app:background_normal="@color/white"
                app:border_color_normal="@color/color_FF698F"
                app:border_width_normal="1dp"
                app:corner_radius="6dp" />

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:gravity="center_horizontal"
                android:onClick="HttpChange"
                android:text="当前版本1.0.5\nAll Rights Reserved By 内含段子"
                android:textColor="@color/color_747E8A"
                android:textSize="12dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>

