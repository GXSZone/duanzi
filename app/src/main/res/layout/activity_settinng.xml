<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".module.mine.SettingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置"
            android:textColor="#ff3f4557"
            android:textSize="18dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/view_line" />

    <TextView
        android:id="@+id/tv_click_notice_setting"
        style="@style/mine_item_text"
        android:drawableLeft="@mipmap/setting_notice"
        android:text="消息设置" />

    <include layout="@layout/view_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:paddingLeft="20dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/setup_autoplay"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:text="Wi-Fi自动播放"
            android:textColor="@color/color_171F24" />

        <Switch
            android:id="@+id/wifi_auto_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <include layout="@layout/view_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:paddingLeft="20dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/setup_mobile"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:text="移动流量自动播放"
            android:textColor="@color/color_171F24" />


        <Switch
            android:id="@+id/liuliang_auto_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <include layout="@layout/view_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:paddingLeft="20dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/setup_huyan"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:text="护眼模式"
            android:textColor="@color/color_171F24" />

        <Switch
            android:id="@+id/eye_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <include layout="@layout/view_line" />

    <RelativeLayout
        android:id="@+id/rl_clear_cache"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:paddingLeft="20dp"
        android:paddingRight="25dp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/setup_clean"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:text="清理缓存"
            android:textColor="@color/color_171F24" />

        <TextView
            android:id="@+id/tv_cache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@mipmap/my_more"
            android:drawablePadding="10dp"
            android:text="0M" />
    </RelativeLayout>

    <include layout="@layout/view_line" />

    <TextView
        android:id="@+id/tv_click_user_agreement"
        style="@style/mine_item_text"
        android:drawableLeft="@mipmap/my_wdtiezi"
        android:text="用户隐私协议" />

    <include layout="@layout/view_line" />

    <TextView
        android:id="@+id/tv_click_community_convention"
        style="@style/mine_item_text"
        android:drawableLeft="@mipmap/setup_shequgongyue"
        android:text="社区公约" />

    <include layout="@layout/view_line" />

    <include layout="@layout/view_line" />

    <TextView
        android:id="@+id/tv_click_login_out"
        style="@style/mine_item_text"
        android:drawableLeft="@mipmap/my_wdtiezi"
        android:drawableRight="@null"
        android:text="退出登录" />

    <include layout="@layout/view_line" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:gravity="center_horizontal"
        android:onClick="HttpChange"
        android:text="当前版本1.0.4\nAll Rights Reserved By 内含段子"
        android:textColor="@color/color_747E8A"
        android:textSize="12dp" />
</LinearLayout>