<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_bottom_publish"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="15dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <com.ruffian.library.widget.REditText
            android:id="@+id/et_send_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:hint="期待你的神评论"
            android:imeOptions="actionSend"
            android:maxLength="500"
            android:maxLines="4"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:scrollbars="vertical"
            android:textColor="@color/color_2A2A30"
            android:textCursorDrawable="@null"
            android:textSize="14dp"
            app:background_normal="@color/color_F2F2F2"
            app:corner_radius="17dp" />

        <TextView
            android:id="@+id/bottom_tv_like"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/image_like_selector"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:text="0"
            android:textColor="@color/color_828393"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/bottom_iv_collection"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:src="@drawable/image_collection_selector" />

        <ImageView
            android:id="@+id/bottom_iv_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:scaleType="center"
            android:src="@mipmap/share_comment" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/keyboard_show_rl"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_detail_video1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/details_viedo" />

        <ImageView
            android:id="@+id/iv_detail_photo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/iv_detail_video1"
            android:src="@mipmap/details_photo" />

        <com.ruffian.library.widget.RTextView
            android:id="@+id/tv_click_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:enabled="false"
            android:paddingLeft="17dp"
            android:paddingTop="7dp"
            android:paddingRight="17dp"
            android:paddingBottom="7dp"
            android:text="发布"
            android:textColor="@color/white"
            android:textSize="14dp"
            app:background_normal="@array/array_edit_color"
            app:background_pressed="#D8E1E9"
            app:background_unable="#D8E1E9"
            app:corner_radius="35dp"
            app:gradient_centerX="0"
            app:gradient_centerY="0.5"
            app:gradient_orientation="LEFT_RIGHT"
            app:gradient_type="linear" />
    </RelativeLayout>

</LinearLayout>