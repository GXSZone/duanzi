<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:background="@color/color_status_bar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_topic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="35dp"
        android:textColor="@color/color_2A2A30"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/iv_user_avatar"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="#搞笑视频#" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="分享最有趣的搞笑视频尽在本话题"
        android:textColor="@color/color_747E8A"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/tv_topic_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_topic_title" />

    <ImageView
        android:id="@+id/iv_selector_is_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/image_follow_selector"
        app:layout_constraintEnd_toEndOf="@+id/iv_user_avatar"
        app:layout_constraintStart_toStartOf="@+id/iv_user_avatar"
        app:layout_constraintTop_toBottomOf="@+id/iv_user_avatar" />


    <com.ruffian.library.widget.RImageView
        android:id="@+id/iv_user_avatar"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_marginLeft="30dp"
        android:scaleType="centerCrop"
        app:corner_radius="12dp"
        app:icon_src_normal="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>