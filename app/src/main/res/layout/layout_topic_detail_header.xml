<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="30dp">

    <com.ruffian.library.widget.RImageView
        android:id="@+id/iv_user_avatar"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginLeft="@dimen/dp_40"
        android:scaleType="centerCrop"
        app:corner_radius="5dp"
        app:icon_src_normal="@mipmap/shenlue_logo" />

    <TextView
        android:id="@+id/tv_topic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_user_avatar"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/iv_user_avatar"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/color_2A2A30"
        android:textSize="18dp"
        android:textStyle="bold"
        tools:text="#搞笑视频#" />

    <TextView
        android:id="@+id/topic_user_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_topic_title"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/iv_user_avatar"
        android:text="10万段友参与讨论"
        android:textColor="@color/color_FF5A8E"
        android:textSize="12dp" />

    <com.ruffian.library.widget.RTextView
        android:id="@+id/iv_selector_is_follow"
        style="@style/style_follow_bt"
        android:layout_height="30dp"
        android:layout_below="@id/topic_user_num"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/iv_user_avatar"
        android:text="+    关注"
        android:textSize="13dp" />

    <com.caotu.duanzhi.view.widget.ExpandableTextView
        android:id="@+id/expand_text_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_selector_is_follow"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="15dp"
        android:maxLines="5"
        android:lineSpacingExtra="4dp"
        android:text="话题导语 最大5行"
        android:textColor="@color/color_747E8A"
        android:textSize="14dp" />

    <LinearLayout
        android:id="@+id/ll_hot_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/expand_text_header"
        android:background="@mipmap/hot_topic_bg"
        android:orientation="horizontal"
        android:paddingLeft="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@mipmap/hot_icon"
            android:drawablePadding="8dp"
            android:text="热门"
            android:textColor="@color/color_171F24"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/hot_topic_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="24dp"
            android:drawableRight="@mipmap/my_more"
            android:drawablePadding="5dp"
            android:text="置顶的内容标题，点击进入内容详情"
            android:textColor="@color/color_747E8A"
            android:textSize="14dp" />
    </LinearLayout>
</RelativeLayout>