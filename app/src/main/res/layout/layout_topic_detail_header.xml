<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="30dp"
    android:paddingBottom="30dp">

    <com.ruffian.library.widget.RImageView
        android:id="@+id/iv_user_avatar"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:layout_marginLeft="40dp"
        android:scaleType="centerCrop"
        app:corner_radius="5dp"
        app:icon_src_normal="@mipmap/shenlue_logo" />

    <TextView
        android:id="@+id/tv_topic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_user_avatar"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/iv_user_avatar"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/color_2A2A30"
        android:textSize="18dp"
        android:textStyle="bold"
        tools:text="#搞笑视频#" />

    <com.ruffian.library.widget.RTextView
        android:id="@+id/iv_selector_is_follow"
        style="@style/style_follow_bt"
        android:layout_alignBottom="@id/iv_user_avatar"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/iv_user_avatar"
        android:text="+    关注" />
</RelativeLayout>