<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".module.home.ContentDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:maxWidth="200dp"
            android:singleLine="true"
            android:text="详情"
            android:textColor="#ff3f4557"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/web_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingRight="20dp"
            android:scaleType="center"
            android:src="@mipmap/home_share"
            android:visibility="invisible" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="44dp"
        android:background="@color/view_line" />

    <include layout="@layout/include_detail_bottom_reply" />

    <com.luck.picture.lib.widget.PreviewViewPager
        android:id="@+id/detail_scroll_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_bottom_publish"
        android:layout_marginTop="44dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/publish_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/ll_bottom_publish"
        android:layout_marginBottom="10dp"
        android:background="@drawable/xiangqin_pic_bg"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="20dp"
        android:visibility="gone" />
    <!--用于处理键盘点击消失的处理-->
    <View
        android:id="@+id/view_by_keyboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_bottom_publish"
        android:visibility="gone" />
</RelativeLayout>
