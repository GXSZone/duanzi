<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".module.home.ContentDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="详情"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxWidth="200dp"
            android:textColor="#ff3f4557"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/web_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingRight="20dp"
            android:scaleType="center"
            android:src="@mipmap/web_share_icon"
            android:visibility="invisible" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="44dp"
        android:background="@color/view_line" />

    <LinearLayout
        android:id="@+id/ll_bottom_publish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical">

            <com.ruffian.library.widget.REditText
                android:id="@+id/et_send_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:hint="期待你的神评论"
                android:imeOptions="actionSend"
                android:maxLength="500"
                android:maxLines="4"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:scrollbars="vertical"
                android:textColor="@color/color_2A2A30"
                android:textCursorDrawable="@null"
                android:textSize="11dp"
                app:background_normal="@color/color_F2F2F2"
                app:corner_radius="17dp" />

            <ImageView
                android:id="@+id/iv_detail_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/details_photo" />

            <ImageView
                android:id="@+id/iv_detail_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/details_viedo" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/keyboard_show_rl"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_detail_photo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/details_photo" />

            <ImageView
                android:id="@+id/iv_detail_video1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@id/iv_detail_photo1"
                android:src="@mipmap/details_viedo" />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/tv_click_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:enabled="false"
                android:paddingBottom="7dp"
                android:paddingLeft="17dp"
                android:paddingRight="17dp"
                android:paddingTop="7dp"
                android:text="发布"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:background_normal="@array/array_edit_color"
                app:background_pressed="#D8E1E9"
                app:background_unable="#D8E1E9"
                app:corner_radius="35dp"
                app:gradient_centerX="0"
                app:gradient_centerY="0.5"
                app:gradient_orientation="LEFT_RIGHT"
                app:gradient_type="linear" />
        </RelativeLayout>

    </LinearLayout>

    <com.luck.picture.lib.widget.PreviewViewPager
        android:id="@+id/detail_scroll_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_bottom_publish"
        android:layout_marginTop="44dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/publish_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/ll_bottom_publish"
        android:layout_marginBottom="10dp"
        android:background="@drawable/xiangqin_pic_bg"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:visibility="gone" />

</RelativeLayout>
