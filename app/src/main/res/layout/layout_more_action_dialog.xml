<?xml version="1.0" encoding="utf-8"?>
<com.ruffian.library.widget.RLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
   android:background="@color/white"
    app:corner_radius_top_left="6dp"
    app:corner_radius_top_right="6dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/bt_report"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/more_jubao"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="举报"
            android:textColor="@color/color_7c7c7c"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/bt_no_interested"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:drawableTop="@mipmap/more_nointerest"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="不感兴趣"
            android:textColor="@color/color_7c7c7c"
            android:textSize="13dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="35dp"
        android:background="@color/view_line" />

    <TextView
        android:id="@+id/tv_click_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="取消"
        android:textColor="@color/color_3f4557"
        android:textSize="14dp" />
</com.ruffian.library.widget.RLinearLayout>
