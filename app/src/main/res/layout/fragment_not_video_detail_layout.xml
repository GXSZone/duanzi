<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:src="@mipmap/back"
                app:layout_constraintLeft_toLeftOf="parent" />

            <ImageView
                android:id="@+id/iv_more_bt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="20dp"
                android:src="@mipmap/home_more"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/tv_title_big"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="@color/color_3f4557"
                android:textSize="18dp"
                app:layout_constraintLeft_toRightOf="@id/iv_back"
                app:layout_constraintRight_toLeftOf="@id/iv_more_bt"
                tools:text="帖子详情" />

            <androidx.constraintlayout.widget.Group
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:constraint_referenced_ids="iv_topic_image,tv_topic_name,iv_topic_follow" />

            <com.ruffian.library.widget.RImageView
                android:id="@+id/iv_topic_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:scaleType="centerCrop"
                app:corner_radius="3dp"
                app:icon_src_normal="@mipmap/touxiang_moren"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/iv_back"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_topic_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="搞笑视频"
                android:textColor="@color/color_3f4557"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="@id/iv_topic_image"
                app:layout_constraintLeft_toRightOf="@id/iv_topic_image"
                app:layout_constraintTop_toTopOf="@id/iv_topic_image" />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/iv_topic_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:paddingLeft="13dp"
                android:paddingTop="7dp"
                android:paddingRight="13dp"
                android:paddingBottom="7dp"
                android:text="关注"
                android:textColor="@color/white"
                android:textSize="12dp"
                app:background_normal="@color/color_5757FF"
                app:background_pressed="@color/color_CECEF3"
                app:background_unable="@color/color_CECEF3"
                app:corner_radius="4dp"
                app:layout_constraintBottom_toBottomOf="@id/iv_topic_image"
                app:layout_constraintRight_toLeftOf="@id/iv_more_bt"
                app:layout_constraintTop_toTopOf="@id/iv_topic_image" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <com.caotu.duanzhi.view.widget.StateView
            android:id="@+id/states_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:state_current="content"
            app:state_error="@layout/layout_no_network"
            app:state_loading="@layout/layout_loading_base_view">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager=".view.RecyclerViewNoBugLinearLayoutManager"
                tools:listitem="@android:layout/simple_list_item_1" />
        </com.caotu.duanzhi.view.widget.StateView>

        <include layout="@layout/include_detail_bottom_reply" />
    </LinearLayout>

</com.scwang.smartrefresh.layout.SmartRefreshLayout>
