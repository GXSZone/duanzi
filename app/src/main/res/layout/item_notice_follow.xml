<?xml version="1.0" encoding="utf-8"?>
<com.ruffian.library.widget.RRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    app:background_normal="@color/white"
    app:corner_radius="6dp">

    <com.caotu.duanzhi.view.widget.AvatarWithNameLayout
        android:id="@+id/group_user_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        app:layout_mode="big" />

    <com.ruffian.library.widget.RTextView
        android:id="@+id/iv_selector_is_follow"
        style="@style/style_follow_bt"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="关注" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/view_line" />
</com.ruffian.library.widget.RRelativeLayout>
