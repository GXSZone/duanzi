<?xml version="1.0" encoding="utf-8"?>
<com.ruffian.library.widget.RRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    app:background_normal="@color/white"
    app:corner_radius="6dp">

    <com.sunfusheng.GlideImageView
        android:id="@+id/iv_notice_user"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:src="@mipmap/touxiang_moren" />

    <TextView
        android:id="@+id/tv_item_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="19dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/iv_selector_is_follow"
        android:layout_toRightOf="@id/iv_notice_user"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="段子哥 关注了你"
        android:textColor="@color/color_2A2A30"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/notice_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_user"
        android:layout_alignLeft="@id/tv_item_user"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/iv_selector_is_follow"
        android:text="刚刚"
        android:textColor="@color/color_828393"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/iv_selector_is_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/image_follow_selector" />

</com.ruffian.library.widget.RRelativeLayout>
