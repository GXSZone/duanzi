<?xml version="1.0" encoding="utf-8"?>
<com.ruffian.library.widget.RRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:corner_radius="6dp"
    app:background_normal="@color/white"
    android:paddingLeft="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:paddingRight="10dp">

    <FrameLayout
        android:id="@+id/fl_more_users"
        android:layout_width="53dp"
        android:layout_centerVertical="true"
        android:layout_height="53dp">

        <com.sunfusheng.GlideImageView
            android:id="@+id/iv_notice_user_one"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>

        <com.sunfusheng.GlideImageView
            android:id="@+id/iv_notice_user_two"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />
    </FrameLayout>


    <TextView
        android:id="@+id/tv_item_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/fl_image_or_text"
        android:layout_toRightOf="@id/fl_more_users"
        android:ellipsize="end"
        android:maxLines="2"
        android:singleLine="false"
        android:text="舒心 赞了你的作品"
        android:textColor="@color/color_2A2A30"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/notice_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_user"
        android:layout_alignLeft="@id/tv_item_user"
        android:layout_toLeftOf="@id/fl_image_or_text"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="刚刚"
        android:textColor="@color/color_828393"
        android:textSize="12dp" />

    <RelativeLayout
        android:id="@+id/fl_image_or_text"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical" />

</com.ruffian.library.widget.RRelativeLayout>
