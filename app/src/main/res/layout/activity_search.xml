<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".module.search.SearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.ruffian.library.widget.REditText
            android:id="@+id/et_search_user"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/search"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:hint="输入段友号或昵称搜索用户"
            android:paddingLeft="15dp"
            android:textSize="12dp"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            app:background_normal="@color/color_F2F2F2"
            app:corner_radius="15dp" />

        <TextView
            android:id="@+id/tv_click_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="23dp"
            android:text="取消"
            android:textColor="@color/color_2A2A30"
            android:textSize="16dp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_fragment_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp" />
</LinearLayout>