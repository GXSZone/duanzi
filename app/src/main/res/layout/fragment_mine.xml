<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refresh_swipe"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="50dp">

                <com.ruffian.library.widget.RImageView
                    android:id="@+id/iv_user_avatar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:elevation="10dp"
                    android:src="@mipmap/touxiang_moren"
                    app:is_circle="true" />

                <com.ruffian.library.widget.RTextView
                    android:id="@+id/edit_info"
                    android:layout_width="102dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="编辑"
                    android:textColor="@color/white"
                    app:background_normal="@array/array_edit_color"
                    app:background_pressed="@color/color_FF8787"
                    app:corner_radius="35dp"
                    app:gradient_centerX="0"
                    app:gradient_centerY="0.5"
                    app:gradient_orientation="LEFT_RIGHT"
                    app:gradient_type="linear" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/my_girl"
                    android:ellipsize="end"
                    android:maxEms="8"
                    android:singleLine="true"
                    android:textColor="@color/color_171F24"
                    android:textSize="24dp"
                    tools:text="蔡徐坤出来挨打" />

                <LinearLayout
                    android:id="@+id/ll_user_logos"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.ruffian.library.widget.RTextView
                    android:id="@+id/tv_user_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="6dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:textColor="@color/color_828393"
                    android:textSize="14dp"
                    app:background_normal="@color/color_F2F2F2"
                    app:corner_radius="3dp"
                    tools:text="段友号：784577" />

                <com.ruffian.library.widget.RTextView
                    android:id="@+id/tv_user_logo_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="6dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:textColor="@color/color_828393"
                    android:textSize="14dp"
                    android:visibility="gone"
                    app:background_normal="@color/color_F2F2F2"
                    app:corner_radius="3dp"
                    tools:text="段友号：784577" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_user_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:maxEms="12"
                android:singleLine="true"
                android:text="这是个神秘的段友~"
                android:textColor="@color/color_828393"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@mipmap/my_bg"
                android:gravity="center_vertical">

                <LinearLayout
                    android:id="@+id/ll_click_praise"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_praise_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/color_171F24"
                        android:textSize="17dp" />

                    <TextView
                        style="@style/mine_tab_text"
                        android:text="获赞" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_click_focus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_focus_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/color_171F24"
                        android:textSize="17dp" />

                    <TextView
                        style="@style/mine_tab_text"
                        android:text="关注" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_click_fans"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_fans_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/color_171F24"
                        android:textSize="17dp" />

                    <TextView
                        style="@style/mine_tab_text"
                        android:text="粉丝" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_parent_medal"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/color_F2F2F2"
                android:paddingLeft="44dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:lineSpacingExtra="5dp"
                    android:text="我的\n勋章"
                    android:textColor="@color/color_828393"
                    android:textSize="14dp" />

                <com.sunfusheng.GlideImageView
                    android:id="@+id/iv_medal_one"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="35dp" />

                <com.sunfusheng.GlideImageView
                    android:id="@+id/iv_medal_two"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_click_my_post"
                style="@style/mine_item_text"
                android:layout_marginTop="20dp"
                android:drawableLeft="@mipmap/my_wdtiezi"
                android:text="我的帖子" />

            <include layout="@layout/view_line" />

            <TextView
                android:id="@+id/tv_click_my_comment"
                style="@style/mine_item_text"
                android:drawableLeft="@mipmap/my_wdpl"
                android:text="我的评论" />

            <include layout="@layout/view_line" />

            <TextView
                android:id="@+id/tv_click_my_collection"
                style="@style/mine_item_text"
                android:drawableLeft="@mipmap/my_wdsc"
                android:text="我的收藏" />

            <include layout="@layout/view_line" />

            <TextView
                android:id="@+id/tv_click_share_friend"
                style="@style/mine_item_text"
                android:drawableLeft="@mipmap/my_tuijian"
                android:text="推荐给好友" />

            <include layout="@layout/view_line" />

            <TextView
                android:id="@+id/tv_click_my_feedback"
                style="@style/mine_item_text"
                android:drawableLeft="@mipmap/my_bz"
                android:text="帮助与反馈" />

            <include layout="@layout/view_line" />

            <TextView
                android:id="@+id/tv_click_setting"
                style="@style/mine_item_text"
                android:drawableLeft="@mipmap/my_shezhi"
                android:text="设置" />

            <include layout="@layout/view_line" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="66dp" />
        </LinearLayout>
    </ScrollView>
</android.support.v4.widget.SwipeRefreshLayout>
