<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.publish.PublishActivity">

    <ImageView
        android:id="@+id/bt_publish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:scaleType="center"
        android:src="@mipmap/release_button" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/bt_publish"
        android:layout_alignBottom="@id/bt_publish"
        android:paddingLeft="30dp"
        android:src="@mipmap/back" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_publish"
        android:layout_marginTop="20dp"
        android:background="@drawable/log_bg_ninepath">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_publish_text"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:gravity="left|top"
                android:hint="标题写的好，粉丝少不了"
                android:maxLength="500"
                android:padding="5dp"
                android:scrollbars="vertical"
                android:textColor="@color/color_2A2A30"
                android:textColorHint="@color/color_828393"
                android:textCursorDrawable="@null"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_text_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:text="0/500"
                android:textColor="@color/color_828393"
                android:textSize="11dp" />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/tv_selected_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="17dp"
                android:paddingTop="9dp"
                android:paddingRight="17dp"
                android:paddingBottom="9dp"
                android:text="#点击添加话题"
                android:textColor="@color/color_5757FF"
                android:textSize="12dp"
                app:background_normal="@color/color_F4F4F9"
                app:background_pressed="@color/white"
                app:corner_radius="3dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_publish_images_show_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="35dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_get_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/release_viedo" />

                <ImageView
                    android:id="@+id/iv_get_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/release_photo" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>