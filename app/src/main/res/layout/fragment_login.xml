<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/layout_login_and_bind_view" />

    <TextView
        android:id="@+id/bt_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right"
        android:paddingLeft="18dp"
        android:paddingTop="18dp"
        android:paddingRight="26dp"
        android:paddingBottom="18dp"
        android:text="忘记密码"
        android:textColor="@color/color_5757FF"
        android:textSize="14dp" />

    <com.ruffian.library.widget.RTextView
        android:id="@+id/fragment_login_login_but"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="18dp"
        android:enabled="false"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="17dp"
        app:background_normal="@color/color_5757FF"
        app:background_unable="@color/color_CECEF3"
        app:corner_radius="6dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginBottom="80dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录/注册表示您已同意"
            android:textColor="@color/color_D4D4D4"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_user_agreement"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:textColor="@color/color_5757FF"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《用户协议》" />
    </LinearLayout>


</LinearLayout>
