<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    tools:showIn="@layout/item_base_content">

    <TextView
        android:id="@+id/base_moment_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:drawableLeft="@drawable/image_like_selector"
        android:drawablePadding="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="0"
        android:textColor="@color/color_828393"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/base_moment_unlike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:drawableLeft="@drawable/image_unlike_selector"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="0"
        android:textColor="@color/color_828393"
        android:textSize="12dp" />


    <TextView
        android:id="@+id/base_moment_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:drawableLeft="@mipmap/home_chat"
        android:drawablePadding="10dp"
        android:paddingTop="15dp"
        android:paddingRight="14dp"
        android:paddingBottom="15dp"
        android:text="4K"
        android:textColor="@color/color_828393"
        android:textSize="12dp" />

    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/base_moment_share_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:padding="15dp"
        android:scaleType="center"
        android:src="@mipmap/home_share" />
</LinearLayout>