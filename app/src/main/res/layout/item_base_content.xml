<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/home_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical">

        <com.ruffian.library.widget.RImageView
            android:id="@+id/base_moment_avatar_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:corner_radius="2dp"
            app:icon_src_normal="@mipmap/touxiang_moren" />

        <TextView
            android:id="@+id/base_moment_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color_2A2A30"
            android:textSize="12dp"
            tools:text="哈哈或或或或或或或或或或或或" />

        <ImageView
            android:id="@+id/item_iv_more_bt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="18dp"
            android:src="@mipmap/home_more" />
    </LinearLayout>


    <!--<TextView-->
        <!--android:id="@+id/expand_text_view"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:ellipsize="end"-->
        <!--android:maxLines="6"-->
        <!--android:padding="20dp"-->
        <!--android:singleLine="false"-->
        <!--android:textColor="@color/color_2A2A30"-->
        <!--android:textSize="16dp"-->
        <!--tools:text="qlw" />-->
    <TextView
        android:id="@+id/expand_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="20dp"
        android:ellipsize="end"
        android:maxLines="6"
        android:singleLine="false"
        android:textColor="@color/color_2A2A30"
        android:textSize="16dp"
        tools:text="qlw" />

    <!--添加图片或者视频-->
    <com.sunfusheng.widget.NineImageView
        android:id="@+id/base_moment_imgs_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:focusable="true" />
    <!--神评论区-->

    <RelativeLayout
        android:id="@+id/rl_best_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/color_F2F2F2"
        android:paddingTop="10dp"
        android:visibility="visible">

        <com.ruffian.library.widget.RImageView
            android:id="@+id/iv_best_avatar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            app:icon_src_normal="@mipmap/touxiang_moren"
            app:is_circle="true" />

        <TextView
            android:id="@+id/tv_spl_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_best_avatar"
            android:gravity="center_vertical"
            android:textColor="@color/color_828393"
            android:textSize="10dp"
            tools:text="xingming" />

        <ImageView
            android:id="@+id/base_moment_spl_like_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/image_comment_like_selector" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/base_moment_spl_like_iv"
            android:src="@mipmap/shenpinlun_new" />

        <TextView
            android:id="@+id/base_moment_spl_comment_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_best_avatar"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:ellipsize="end"
            android:maxLines="4"
            android:textColor="@color/color_828393"
            android:textSize="14dp" />
        <!--添加图片或者视频-->
        <com.sunfusheng.widget.NineImageView
            android:id="@+id/base_moment_spl_imgs_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/base_moment_spl_comment_tv"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:focusable="true" />
    </RelativeLayout>

    <include layout="@layout/item_content_bottom" />

</LinearLayout>