<?xml version="1.0" encoding="utf-8"?>

<com.ruffian.library.widget.RLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_parent_medal"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:paddingLeft="44dp"
    app:background_normal="@color/color_F2F2F2"
    app:corner_radius="30dp">

    <TextView
        android:id="@+id/user_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:lineSpacingExtra="5dp"
        android:text="我的\n勋章"
        android:textColor="@color/color_828393"
        android:textSize="14dp" />

    <com.sunfusheng.GlideImageView
        android:id="@+id/iv_medal_one"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="35dp" />

    <com.sunfusheng.GlideImageView
        android:id="@+id/iv_medal_two"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30dp" />
</com.ruffian.library.widget.RLinearLayout>