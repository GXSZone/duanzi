<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp">

    <RelativeLayout
        android:id="@+id/list_header_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门评论"
            android:textColor="@color/color_828393"
            android:textSize="14dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/header_text"
            android:layout_marginTop="5dp"
            android:background="@color/view_line" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_god_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/shenpinlun_new" />

        <LinearLayout
            android:id="@+id/ll_title_parent"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.ruffian.library.widget.RImageView
                android:id="@+id/comment_item_avatar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:src="@mipmap/touxiang_moren" />

            <TextView
                android:id="@+id/comment_item_name_tx"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="Sophia"
                android:textColor="@color/color_2A2A30"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/base_moment_spl_like_iv"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_toLeftOf="@id/base_moment_share_iv"
                android:drawableLeft="@drawable/image_like_selector"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="0"
                android:textColor="@color/color_828393"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/base_moment_share_iv"
                android:layout_width="30dp"
                android:layout_height="41dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:scaleType="center"
                android:src="@mipmap/home_share" />
        </LinearLayout>


        <TextView
            android:id="@+id/expand_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_title_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="42dp"
            android:ellipsize="end"
            android:maxLines="6"
            android:textColor="@color/color_2A2A30"
            android:textSize="14dp"
            tools:text="jksajdksajdkjsakdjas" />

        <!--视频和图片都用这个九宫格控件-->
        <com.sunfusheng.widget.NineImageView
            android:id="@+id/detail_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/expand_text_view"

            android:layout_marginLeft="42dp"
            android:clickable="true"
            android:focusable="true"
            android:paddingBottom="5dp" />


        <com.ruffian.library.widget.RLinearLayout
            android:id="@+id/child_reply_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_image"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:padding="10dp"
            app:background_normal="@color/color_F2F2F2"
            app:corner_radius="3dp">

            <TextView
                android:id="@+id/comment_item_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/color_828393"
                android:textSize="12dp"
                tools:text="nam1:text" />

            <TextView
                android:id="@+id/comment_item_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/color_828393"
                android:textSize="12dp"
                tools:text="nam1:text" />

            <TextView
                android:id="@+id/comment_reply_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/color_FF698F"
                android:textSize="12sp"
                tools:text="共3条回复 👉" />
        </com.ruffian.library.widget.RLinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view_line_bottom"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="35dp"
        android:background="@color/view_line" />

</LinearLayout>