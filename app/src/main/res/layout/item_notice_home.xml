<?xml version="1.0" encoding="utf-8"?>
<com.ruffian.library.widget.RRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="104dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    app:background_normal="@color/white"
    app:corner_radius="6dp">

    <com.ruffian.library.widget.RImageView
        android:id="@+id/iv_notice_user"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_centerVertical="true"
        app:icon_src_normal="@mipmap/touxiang_moren"
        app:is_circle="true" />

    <com.sunfusheng.GlideImageView
        android:id="@+id/iv_user_auth"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignRight="@id/iv_notice_user"

        android:layout_alignBottom="@id/iv_notice_user"
        android:layout_marginRight="-3dp"
        tools:src="@mipmap/vv" />

    <com.ruffian.library.widget.RView
        android:id="@+id/red_point_tip"
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:layout_alignTop="@id/iv_notice_user"
        android:layout_alignRight="@id/iv_notice_user"
        android:layout_marginTop="-7dp"
        android:layout_marginRight="-5dp"
        app:background_normal="@color/color_DB2D43"
        app:corner_radius="4.5dp" />

    <TextView
        android:id="@+id/tv_item_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="19dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/notice_time"
        android:layout_toRightOf="@id/iv_notice_user"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="段子哥官方号"
        android:textColor="@color/color_2A2A30"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/notice_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_user"
        android:layout_alignLeft="@id/tv_item_user"
        android:layout_marginTop="6dp"
        android:layout_marginRight="7dp"
        android:ellipsize="end"
        android:lineSpacingExtra="5dp"
        android:maxLines="2"
        android:text="读只有次点击的时候会阅所的时候会弹出“是否一键批阅所次点击的时候会弹出“是否一键批阅所"
        android:textColor="@color/color_828393"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/notice_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="56分钟前"
        android:textColor="@color/color_828393"
        android:textSize="10dp" />


</com.ruffian.library.widget.RRelativeLayout>
