<?xml version="1.0" encoding="utf-8"?>
<com.ruffian.library.widget.RRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    app:background_normal="@color/white"
    app:corner_radius="6dp">

    <com.sunfusheng.GlideImageView
        android:id="@+id/iv_notice_user"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <View
        android:id="@+id/red_point_tip"
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/iv_notice_user"
        android:background="@drawable/shape_notice" />

    <TextView
        android:id="@+id/tv_item_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="19dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/notice_time"
        android:layout_toRightOf="@id/iv_notice_user"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="段子哥官方号"
        android:textColor="@color/color_2A2A30"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/notice_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_user"
        android:layout_alignLeft="@id/tv_item_user"
        android:layout_marginTop="3dp"
        android:layout_marginRight="7dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="刚刚"
        android:textColor="@color/color_828393"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/notice_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="56分钟前"
        android:textColor="@color/color_828393"
        android:textSize="10dp" />


</com.ruffian.library.widget.RRelativeLayout>
