<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--远离shape xml,design 就有这控件写圆角-->
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/color_FF698F"
        android:gravity="center"
        android:onClick="play"
        android:padding="10dp"
        android:shadowColor="@color/black"
        android:text="播放声音"

        android:textAppearance="@style/TextAppearance.AppCompat"
        app:cornerRadius="20dp"
        app:rippleColor="@color/color_f5f6f8"
        app:strokeColor="@color/black"
        app:strokeWidth="@dimen/dp_10" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="anim"
        android:shadowColor="@color/color_FF698F"

        android:text="上下浮动动画" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="change"
        android:text="选择视频" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="bt_add"
        android:text="添加span" />

    <TextView
        android:id="@+id/video_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="1233323232323" />

    <com.caotu.duanzhi.view.widget.WeiboEditText.CopyWeChatEditText
        android:id="@+id/copy_wechat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:imeOptions="actionSend"
        android:maxLength="500"
        android:maxLines="4"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:scrollbars="vertical"
        android:textColor="@color/color_2A2A30"
        android:textCursorDrawable="@null"
        android:textSize="11dp"
        android:visibility="gone"
        app:background_normal="@color/color_F2F2F2"
        app:corner_radius="17dp" />

    <com.caotu.duanzhi.view.widget.WeiboEditText.WeiboEdittext
        android:id="@+id/weibo_edittext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_F2F2F2"
        android:visibility="gone"
        app:corner_radius="18dp" />

    <com.dueeeke.videoplayer.player.IjkVideoView
        android:id="@+id/dk_player"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="111" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="111" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="111" />
    </RadioGroup>
    <!-- app:lottie_imageAssetsFolder="images" -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        app:lottie_autoPlay="true"
        app:lottie_fileName="play.json"
        app:lottie_loop="true" />
</LinearLayout>

