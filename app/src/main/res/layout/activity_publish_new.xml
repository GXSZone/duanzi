<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".module.publish.PublishActivity">


    <EditText
        android:id="@+id/et_publish_text"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginTop="1dp"
        android:background="@null"
        android:gravity="left|top"
        android:hint="标题写的好，粉丝少不了"
        android:imeOptions="actionNone"
        android:maxLength="500"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:scrollbars="vertical"
        android:textColor="@color/color_2A2A30"
        android:textColorHint="@color/color_c7c7c7"
        android:textCursorDrawable="@drawable/shape_edittext_cursor"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/iv_back" />

    <HorizontalScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/iv_publish_topic">

        <com.caotu.duanzhi.view.widget.OneSelectedLayout
            android:id="@+id/radio_selected"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone" />
    </HorizontalScrollView>


    <ImageView
        android:id="@+id/iv_publish_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:src="@mipmap/publish_topic_iv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/publish_images" />


    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:paddingLeft="20dp"
        android:src="@mipmap/back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
            android:id="@+id/iv_get_video"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:scaleType="center"
            android:src="@mipmap/video_button_big_normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />


        <ImageView
            android:id="@+id/iv_get_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_get_video"
            android:scaleType="center"
            android:src="@mipmap/photo_button_big_normal" />

        <ImageView
            android:id="@+id/iv_at_user"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_get_photo"
            android:scaleType="center"
            android:src="@mipmap/aite_button_big_normal" />

        <com.ruffian.library.widget.RTextView
            android:id="@+id/tv_selected_topic"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxWidth="200dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:singleLine="true"
            android:text="#添加其他话题"
            android:textColor="@color/color_5757FF"
            android:textSize="12dp"
            app:background_normal="@color/color_F4F4F9"
            app:background_pressed="@color/white"
            app:corner_radius="3dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_text_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:text="0/500"
        android:textColor="@color/color_828393"
        android:textSize="11dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_publish_text" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/view_line"
        app:layout_constraintTop_toBottomOf="@id/iv_back" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/publish_images"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_text_length" />
    <!--这个为了小屏遮挡问题,不搞父布局设置不了背景,不然是透明的-->
    <com.ruffian.library.widget.RTextView
        android:id="@+id/bt_publish"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:paddingRight="20dp"
        android:text="发布"
        android:textColor="@color/color_FF8787"
        android:textSize="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:text_color_normal="@color/color_FF8787" />


</androidx.constraintlayout.widget.ConstraintLayout>