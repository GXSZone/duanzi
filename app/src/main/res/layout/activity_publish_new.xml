<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".module.publish.PublishActivity">


    <com.ruffian.library.widget.RTextView
        android:id="@+id/bt_publish"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:paddingRight="20dp"
        android:text="发布"
        android:textColor="@color/color_FF8787"
        android:textSize="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:text_color_normal="@color/color_FF8787" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:paddingLeft="30dp"
        android:src="@mipmap/back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/view_line"
        app:layout_constraintTop_toBottomOf="@id/iv_back" />


    <EditText
        android:id="@+id/et_publish_text"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="1dp"
        android:background="@null"
        android:gravity="left|top"
        android:hint="标题写的好，粉丝少不了"
        android:imeOptions="actionNone"
        android:maxLength="500"
        android:padding="15dp"
        android:scrollbars="vertical"
        android:textColor="@color/color_2A2A30"
        android:textColorHint="@color/color_c7c7c7"
        android:textCursorDrawable="@null"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/iv_back" />

    <TextView
        android:id="@+id/tv_text_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:text="0/500"
        android:textColor="@color/color_828393"
        android:textSize="11dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_publish_text" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/publish_images"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingTop="5dp"
        app:layout_constraintBottom_toTopOf="@id/iv_publish_topic"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_text_length" />

    <ImageView
        android:id="@+id/iv_publish_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/publish_topic_iv"
        app:layout_constraintBottom_toTopOf="@id/scroll_view"
        app:layout_constraintLeft_toLeftOf="parent" />

    <HorizontalScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@id/iv_get_video">

        <com.caotu.duanzhi.view.widget.OneSelectedLayout
            android:id="@+id/radio_selected"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:visibility="gone" />
    </HorizontalScrollView>


    <com.ruffian.library.widget.RImageView
        android:id="@+id/iv_get_video"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:scaleType="center"
        app:icon_src_normal="@mipmap/publish_select_video"
        app:icon_src_pressed="@mipmap/publish_select_video_pressed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


    <com.ruffian.library.widget.RImageView
        android:id="@+id/iv_get_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:scaleType="center"
        app:icon_src_normal="@mipmap/publish_select_photo"
        app:icon_src_pressed="@mipmap/publish_select_photo_press"
        app:layout_constraintBottom_toBottomOf="@id/iv_get_video"
        app:layout_constraintLeft_toRightOf="@id/iv_get_video" />

    <com.ruffian.library.widget.RTextView
        android:id="@+id/tv_selected_topic"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxWidth="200dp"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:singleLine="true"
        android:text="#添加其他话题"
        android:textColor="@color/color_5757FF"
        android:textSize="12dp"
        app:background_normal="@color/color_F4F4F9"
        app:background_pressed="@color/white"
        app:corner_radius="3dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_get_video"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_get_video" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="15dp"
        android:background="@color/view_line"
        app:layout_constraintBottom_toTopOf="@id/iv_get_video" />

</androidx.constraintlayout.widget.ConstraintLayout>