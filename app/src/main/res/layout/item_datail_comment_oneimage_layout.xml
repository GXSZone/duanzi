<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:id="@+id/list_header_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门评论"
            android:textColor="@color/color_828393"
            android:textSize="14dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="5dp"
            android:background="@color/view_line" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_god_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="90dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/shenpinlun_new" />

        <LinearLayout
            android:id="@+id/ll_title_parent"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.ruffian.library.widget.RImageView
                android:id="@+id/comment_item_avatar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:src="@mipmap/touxiang_moren"
                app:corner_radius="2dp" />

            <TextView
                android:id="@+id/comment_item_name_tx"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxWidth="150dp"
                android:singleLine="true"
                android:text="你听到的英语听力说啥样的？"
                android:textColor="@color/color_828393"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/user_auth"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/base_moment_spl_like_iv"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_toLeftOf="@id/base_moment_share_iv"
                android:drawableLeft="@drawable/image_like_selector"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="0"
                android:textColor="@color/color_828393"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/base_moment_share_iv"
                android:layout_width="30dp"
                android:layout_height="41dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:scaleType="center"
                android:src="@mipmap/home_share" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/expand_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="42dp"
                android:ellipsize="end"
                android:maxLines="6"
                android:textColor="@color/color_2A2A30"
                android:textSize="15dp"
                tools:text="jksajdksajdkjsakdjas" />

            <com.sunfusheng.widget.ImageCell
                android:id="@+id/only_one_image"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="5dp" />

            <com.ruffian.library.widget.RLinearLayout
                android:id="@+id/child_reply_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:padding="10dp"
                app:background_normal="@color/color_F2F2F2"
                app:corner_radius="3dp">

                <TextView
                    android:id="@+id/comment_item_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/color_828393"
                    android:textSize="12dp"
                    tools:text="nam1:text" />

                <TextView
                    android:id="@+id/comment_item_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/color_828393"
                    android:textSize="12dp"
                    tools:text="nam1:text" />

                <TextView
                    android:id="@+id/comment_reply_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/color_FF698F"
                    android:textSize="12sp"
                    tools:text="共3条回复 👉" />
            </com.ruffian.library.widget.RLinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view_line_bottom"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="15dp"
        android:background="@color/view_line" />

</LinearLayout>