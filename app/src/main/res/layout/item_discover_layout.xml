<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp">

    <TextView
        android:layout_width="0dp"
        android:layout_height="92dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="39dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/find_smallbg"
        android:paddingLeft="110dp"
        android:paddingTop="20dp"
        android:paddingRight="30dp"
        android:text="分享最有趣的搞笑视频尽在本话题分享最有趣的搞笑视频，尽在。"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.ruffian.library.widget.RImageView
        android:id="@+id/iv_topic_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="30dp"
        app:icon_src_normal="@mipmap/ic_launcher"
        app:is_circle="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_topic_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxWidth="100dp"
        android:singleLine="true"
        android:text="搞笑段子搞笑段搞笑段"
        android:textColor="@color/color_2A2A30"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/iv_topic_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:text="10万段友看过"
        android:textColor="@color/color_828393"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_topic_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_topic_name" />
</androidx.constraintlayout.widget.ConstraintLayout>
