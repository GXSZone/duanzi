<?xml version="1.0" encoding="utf-8"?>
<com.ruffian.library.widget.RLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    app:corner_radius_top_left="6dp"
    app:corner_radius_top_right="6dp"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:id="@+id/ll_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_home"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_launcher" />

        <View
            android:layout_width="29dp"
            android:layout_height="3dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/shape_home_bottom_line" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_publish_click"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:id="@+id/ll_mine_click"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_mine_tab"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_launcher" />

        <View
            android:id="@+id/line_mine_tab"
            android:layout_width="29dp"
            android:layout_height="3dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/shape_home_bottom_line" />
    </LinearLayout>
</com.ruffian.library.widget.RLinearLayout>