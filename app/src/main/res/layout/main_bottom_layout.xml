<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/tab_normal"
    android:gravity="center_vertical"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:id="@+id/ll_home_click"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_weight="1"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/tab_home_selector" />

        <View
            android:id="@+id/line_home_tab"
            android:layout_width="29dp"
            android:layout_height="3dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/shape_home_bottom_line" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_publish_click"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="center"
        android:src="@mipmap/fabu" />

    <LinearLayout
        android:id="@+id/ll_mine_click"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_weight="1"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_mine_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tab_mine_selector" />

        <View
            android:id="@+id/line_mine_tab"
            android:layout_width="29dp"
            android:layout_height="3dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/shape_home_bottom_line"
            android:visibility="invisible" />
    </LinearLayout>
</LinearLayout>