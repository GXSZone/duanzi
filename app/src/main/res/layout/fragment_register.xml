<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/phone_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="26dp"
        android:background="@null"
        android:hint="输入手机号"
        android:inputType="number|phone"
        android:lines="1"
        android:maxLength="11"
        android:textColor="@color/color_2A2A30"
        android:textColorHint="@color/color_D4D4D4"
        android:textCursorDrawable="@null"
        android:textSize="17dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="27dp"
        android:background="@color/view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="26dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/password_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="输入短信验证码"
            android:inputType="number"
            android:lines="1"
            android:maxLength="16"
            android:textColor="@color/color_2A2A30"
            android:textColorHint="@color/color_D4D4D4"
            android:textCursorDrawable="@null"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/tv_verification_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:padding="5dp"
            android:text="@string/get_verify_code"
            android:textColor="@color/color_5757FF"
            android:textSize="14sp" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="27dp"
        android:background="@color/view_line" />


    <com.ruffian.library.widget.RTextView
        android:id="@+id/fragment_login_login_but"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="75dp"
        android:layout_marginRight="18dp"
        android:enabled="false"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="17dp"
        app:background_normal="@color/color_5757FF"
        app:background_unable="@color/color_CECEF3"
        app:corner_radius="6dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录/注册表示您已同意"
            android:textColor="@color/color_D4D4D4"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_user_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:text="《用户协议》"
            android:textColor="@color/color_5757FF"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>
