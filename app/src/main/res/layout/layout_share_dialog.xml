<?xml version="1.0" encoding="utf-8"?>
<com.ruffian.library.widget.RLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    app:corner_radius_top_left="6dp"
    app:corner_radius_top_right="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/share_weixin"
            style="@style/share_dialog_img_style"
            android:drawableTop="@mipmap/share_wechat"
            android:text="微信好友" />

        <TextView
            android:id="@+id/share_friend"
            style="@style/share_dialog_img_style"
            android:drawableTop="@mipmap/share_pyq"
            android:text="朋友圈" />

        <TextView
            android:id="@+id/share_qq"
            style="@style/share_dialog_img_style"
            android:drawableTop="@mipmap/share_qqhaoyou"
            android:text="QQ好友" />

        <TextView
            android:id="@+id/share_qq_space"
            style="@style/share_dialog_img_style"
            android:drawableTop="@mipmap/share_qqzone"
            android:text="QQ空间" />

        <TextView
            android:id="@+id/share_weibo"
            style="@style/share_dialog_img_style"
            android:drawableTop="@mipmap/share_weibo"
            android:text="微博" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/share_download_video"
            style="@style/share_dialog_img_style"
            android:drawableTop="@mipmap/share_download"
            android:text="保存至相册" />

        <TextView
            android:id="@+id/share_collection"
            style="@style/share_dialog_img_style"
            android:drawableTop="@mipmap/share_shoucang_normal"
            android:text="收藏" />

        <TextView
            android:id="@+id/share_copy_text"
            style="@style/share_dialog_img_style"
            android:drawableTop="@mipmap/share_copytext"
            android:text="复制文字" />
        <!--占位用-->
        <Space
            android:id="@+id/space"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="2" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="35dp"
        android:background="@color/view_line" />

    <TextView
        android:id="@+id/tv_click_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="取消"
        android:textColor="@color/color_3f4557"
        android:textSize="14dp" />
</com.ruffian.library.widget.RLinearLayout>